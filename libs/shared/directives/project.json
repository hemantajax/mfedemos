{
  "name": "directives",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/directives/src",
  "projectType": "library",
  "tags": ["type:directives", "scope:shared"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared/directives",
        "main": "libs/shared/directives/src/index.ts",
        "tsConfig": "libs/shared/directives/tsconfig.lib.json",
        "assets": ["libs/shared/directives/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/shared/directives/jest.config.ts"
      }
    }
  }
}
