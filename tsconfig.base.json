{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nxmfe/shared/constants": ["libs/shared/constants/src/index.ts"],
      "@nxmfe/shared/core": ["libs/shared/core/src/index.ts"],
      "@nxmfe/shared/directives": ["libs/shared/directives/src/index.ts"],
      "@nxmfe/shared/layout": ["libs/shared/layout/src/index.ts"],
      "@nxmfe/shared/pipes": ["libs/shared/pipes/src/index.ts"],
      "@nxmfe/shared/services": ["libs/shared/services/src/index.ts"],
      "@nxmfe/shared/ui-components": ["libs/shared/ui-components/src/index.ts"],
      "@nxmfe/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@nxmfe/styles": ["libs/shared/styles/src/index.ts"],
      "cart/Routes": ["apps/cart/src/app/remote-entry/entry.routes.ts"],
      "orders/Routes": ["apps/orders/src/app/remote-entry/entry.routes.ts"],
      "products/Routes": ["apps/products/src/app/remote-entry/entry.routes.ts"],
      "profile/Routes": ["apps/profile/src/app/remote-entry/entry.routes.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
